{
  "compilerOptions": {
    "target": "ESNext",                    // Use latest ECMAScript features
    "module": "NodeNext",                  // Use Node's ES modules
    "moduleResolution": "NodeNext",        // Use Node's module resolution
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
